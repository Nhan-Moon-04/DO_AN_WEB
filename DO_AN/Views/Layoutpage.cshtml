@{ Layout = null; }
<!DOCTYPE html>

<html>

    <head>
        <meta name="viewport" content="width=device-width" />
        <title>UserLayout</title>
        <!--Bootstrap 4-->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

        <style>
            #cart {
                position: absolute;
                margin-left: 100px;
                margin-top:20px;
            }

            .carousel-item img:hover {
                filter: brightness(100%);
            }

            .carousel-control-prev-icon,
            .carousel-control-next-icon {
                background-color: rgba(255, 255, 255, 0.7);
                border-radius: 50%;
            }

            .carousel-indicators li {
                background-color: #ccc;
                border-radius: 50%;
                width: 10px;
                height: 10px;
                cursor: pointer;
            }

            .carousel-indicators .active {
                background-color: #007bff;
            }

            .carousel-inner {
                overflow: hidden;
            }
            .dropdown {
                position: relative;
                display: inline-block;
            }

            .dropdown-menu {
                display: none;
                position: absolute;
                top: 100%; /* Ensures the dropdown appears below the toggle */
                left: 0;
                z-index: 1;
                background-color: #fff;
                min-width: 200px; /* Adjust as needed */
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
                padding: 10px;
            }

            .dropdown:hover .dropdown-menu {
                display: block;
            }

            .dropdown-toggle {
                text-decoration: none;
                color: #333;
                cursor: pointer;
                padding: 5px 10px;
            }

                .dropdown-toggle:hover {
                    background-color: #f0f0f0;
                }

        </style>
    </head>

    <body style="font-family:'Roboto';">
        <div id="website" class="container-fluid">
            <div id="header" class="container-fluid" style="background-color: rgb(250, 250, 250);">
                <div class="row">
                    <div class="col-2 text-center">
                        <img src="~/images/logo.png" alt="" width="60%">
                    </div>
                    <div class="col-10 " style="padding: 10px;">
                        <a href=" #" class="btn btn-light" style="margin: 20px;">Giới thiệu</a>
                        <a href="~/Home/Index" class="btn btn-light" style="margin: 20px;">Trang chủ</a>
                        <div class=" btn-group">
                            <div class="dropdown ">
                                <a class="btn dropdown-toggle">Sản phẩm</a>
                                <div class="dropdown-menu">
                                    @Html.Action("LoaiQuanAoPartial", "LoaiQuanAo")
                                </div>
                            </div>
                        </div>
                        <a href="#footer" class="btn btn-light" style="margin: 20px;">Liên hệ</a>
                        <td><i style=" margin-left: 10px;" class="fa-solid fa-magnifying-glass"></i><input type="search" style="width:300px ;border-radius: 10px; margin-left: 10px;" class="orig" placeholder="Tìm kiếm.." name="phrase" value="" aria-label="Search input" autocomplete="off"></td>
                        <span id="cart">
                            <a href="@Url.Action("GioHang","GioHang")"><img src="~/images/shopping-cart.png" style="width: 30px;" /> @ViewBag.TongSoLuong</a>
                        </span>
                        <div class="btn-group" style="margin:10px; margin-left:170px">
                            <a href="#" class="btn btn-light active">Đăng nhập</a>
                            <a href="#" class="btn btn-info">Đăng ký</a>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div id="label" class="container-fluid py-4" style="background-color: #f8f8f8;">
                <div id="slideShow" class="carousel slide" data-ride="carousel" data-interval="3000">
                    <div class="carousel-inner shadow rounded-lg">
                        <div class="carousel-item active">
                            <img src="~/images/hinh1.jpg" height="550px" class="d-block w-100 rounded" alt="Banner1" style="object-fit: cover; filter: brightness(90%); transition: filter 1s;">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/hinh2.jpg" height="550px" class="d-block w-100 rounded" alt="Banner2" style=" object-fit: cover; filter: brightness(90%); transition: filter 1s;">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/hinh3.jpg" height="550px" class="d-block w-100 rounded" alt="Banner3" style=" object-fit: cover; filter: brightness(90%); transition: filter 1s;">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/hinh4.jpg" height="550px" class="d-block w-100 rounded" alt="Banner4" style=" object-fit: cover; filter: brightness(90%); transition: filter 1s;">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/hinh5.jpg" height="550px" class="d-block w-100 rounded" alt="Banner5" style=" object-fit: cover; filter: brightness(90%); transition: filter 1s;">
                        </div>
                    </div>

                    <!-- Thêm các chấm tròn -->
                    <ol class="carousel-indicators">
                        <li data-target="#slideShow" data-slide-to="0" class="active"></li>
                        <li data-target="#slideShow" data-slide-to="1"></li>
                        <li data-target="#slideShow" data-slide-to="2"></li>
                        <li data-target="#slideShow" data-slide-to="3"></li>
                        <li data-target="#slideShow" data-slide-to="4"></li>
                    </ol>
                </div>
            </div>
            <div id="content" class="row" style="background-color: rgb(250, 250, 250);">
                <br />
                @RenderBody()
            </div>
            <div id="footer" class="bg-dark text-white pt-5 pb-4">
                <div class="container text-center text-md-left">
                    <div class="row text-center text-md-left">
                        <div class="col-md-4 col-lg-2 col-xl-4 mx-auto mt-3">
                            <h5 class="text-uppercase mb-4 font-weight-bold">Liên hệ</h5>
                            <p><i class="fa-solid fa-location-dot"></i> 140 Lê Trọng Tấn, Phường Tây Thạnh, Quận Tân Phú, TP.HCM</p>
                            <p><i class="fas fa-phone-alt mr-2"></i> 0283 8163 318</p>
                            <p><i class="fas fa-envelope mr-2"></i> info@huit.edu.vn</p>
                            <div>
                                <i class="fab fa-facebook-f mx-2"></i>
                                <i class="fab fa-zalo mx-2"></i>
                                <i class="fab fa-tiktok mx-2"></i>
                                <i class="fab fa-instagram mx-2"></i>
